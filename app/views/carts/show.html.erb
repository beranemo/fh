<div class="container">
  <div>
    <h2>Shopping List</h2>
  </div>
  <table>
    <tr>
      <th></th>
      <th></th>
      <th>Price</th>
      <th>Quantity</th>
      <th></th>
      <th></th>
    </tr>
    <% @items.each do |item| %>
      <tr class="product-<%= item.product.id %>">
        <td><%= image_tag item.product.image.url %></td>
        <td><%= item.product.title %></td>
        <td>$ <%= item.product.price %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="4">Subtotal</td>
      <td></td>
    </tr>
  </table>
</div>